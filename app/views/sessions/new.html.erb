<body>
	<div class="back">
		<br><br><br><br>
		<h1 class="display-4 text-center text-white">Log In</h1><br>
      <div class="card w-50 mx-auto">
        <%= form_tag sessions_path do %>
          <div class="mx-auto text-center">
            <p id="alert"><%= alert %></p>
          </div>
      <div class="col-7 mb-3 mx-auto" style="padding: 20px 30px 0">
        <%= label_tag :email %><br>
        <%= text_field_tag :email, params[:email], class: "form-control" %>
      </div>
      <div class="col-7 mb-3 mx-auto" style="padding: 20px 30px 0">
        <%= label_tag :password %><br>
        <%= password_field_tag :password, nil, class: "form-control" %>
      </div>
      <div class="col-7 mb-3 mx-auto" style="padding: 20px 30px 0">
        <%= submit_tag("Log In", :class => "btn btn-primary" )%>
      </div>
      <br>
      <div class="text-center" style="padding: 20px 30px 0">
        <p>New user? <%= link_to "Sign up now!", new_user_path %></p>
      </div>
      <% end %>
    </div>
  </div>
</body>